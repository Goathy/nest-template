{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/config/app": ["libs/config/app/src"],
      "@app/config/app/*": ["libs/config/app/src/*"],
      "@app/common/validations": ["libs/common/validations/src"],
      "@app/common/validations/*": ["libs/common/validations/src/*"],
      "@app/common/helpers": ["libs/common/helpers/src"],
      "@app/common/helpers/*": ["libs/common/helpers/src/*"]
    }
  }
}
